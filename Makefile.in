PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
appname = @APPNAME@
pubdir = @prefix@
srcdir = @srcdir@
applib = FDL

export pubdir utildir appname applib

TAR = gtar
GZIP_ENV = --best
export targetdir PACKAGE

SUBDIR= Class Actions Zone Images Admin locale

pages_not_xml = info.xml
pages_not_php=fam2po.php po2js.php

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) mailconnector.ods \
            RELEASE VERSION 

$(pubdir)/EXTERNALS:
	mkdir $@

$(pubdir)/EXTERNALS/mailconnector.php : mailconnector.php
	cd $(pubdir)/EXTERNALS; \
	ln -s ../$(appname)/$< .

$(pubdir)/$(appname)/%.ods : %.ods
	cp $< $(pubdir)/$(appname)

publish: $(pubdir)/$(appname)/mailconnector.ods  $(pubdir)/EXTERNALS $(pubdir)/EXTERNALS/mailconnector.php

webinst-services:
	make -C Services webinst RELEASE=$(RELEASE) PACKAGE=$(PACKAGE)-services VERSION=$(VERSION) appname=@APPNAME@
	mv Services/*webinst .

webinst: webinst-services

clean:
	rm -f *.*~ config.* Makefile configure info.xml Services/info.xml *webinst $(appname)_init.php Admin/MAILCONNECTORADMIN_init.php
	rm -fr autom4te.cache

stub:
	php  $(utildir)/genStubFamilyClass.php mailconnector.ods > Class/stubMailconnectorFamilies.php